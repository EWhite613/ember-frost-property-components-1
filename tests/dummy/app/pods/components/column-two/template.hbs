<div class="block start frost-flex columns">
  <div class="column-properties first">
    {{boolean-property label='Love bacon' boolean=true}}
    {{boolean-property label='Hate bacon' boolean=false}}
  </div>
  <div class="column-properties">
    {{primary-state-property value='Hate bacon' state='Critical'}}
    {{primary-state-property value="Doesn't bacon" state='Major'}}  
  </div>
  {{#if model.profileName}}
    <div class='tertiary small'>
      {{model.profileName}}
    </div>
  {{/if}}
</div>
{{#if isExpanded}}
  <div class="block start frost-flex-1 no-border expanded">
    {{!-- <div class='tertiary list-value'> {{#if model.projectID}}{{model.projectID}}{{else}}none{{/if}}</div>--}}
    <div class="column-properties first"> 
      {{icon-text-property pack='frost' icon='round-add' text='Ipsum'}}
    </div>
    <div class="column-properties">
      {{primary-state-property value="No bacon" state='Warn'}}
    {{primary-state-property value="Love bacon" state='Neutral'}}    
  </div>
  </div>
{{/if}}