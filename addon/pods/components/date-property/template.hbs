{{#if (isDateObject date)}}
  <span class='date'>{{get-year-month-day date}}</span> <span class='time'> {{get-time date}}</span> <span class='time-zone'> {{get-time-zone date}} </span>  
{{else}}
  <span class='date'>{{date}}</span> <span class='time'> {{time}}</span> <span class='time-zone'> {{timeZone}} </span>  
{{/if}}