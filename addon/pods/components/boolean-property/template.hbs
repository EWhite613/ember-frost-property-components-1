<div class='tertiary small'>
  <span class="boolean-label">{{label}}:</span> 
  {{#if boolean}}
    <svg class="boolean-svg" xmlns:x="http://ns.adobe.com/Extensibility/1.0/" xmlns:i="http://ns.adobe.com/AdobeIllustrator/10.0/" xmlns:graph="http://ns.adobe.com/Graphs/1.0/" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Layer_1" x="0px" y="0px" viewBox="0 0 15 15" enable-background="new 0 0 15 15" xml:space="preserve">
      <switch>
        <foreignObject requiredExtensions="http://ns.adobe.com/AdobeIllustrator/10.0/" x="0" y="0" width="1" height="1">
          <i:pgfRef xlink:href="#adobe_illustrator_pgf">
          </i:pgfRef>
        </foreignObject>
        <g i:extraneous="self">
          <polygon fill="#414141" points="5.9,13.3 0.7,8.2 2.8,6 5.9,9.1 12.2,2.8 14.3,4.9   "/>
        </g>
      </switch>
    </svg>
  {{else}}
    <svg class="boolean-svg" xmlns:x="http://ns.adobe.com/Extensibility/1.0/" xmlns:i="http://ns.adobe.com/AdobeIllustrator/10.0/" xmlns:graph="http://ns.adobe.com/Graphs/1.0/" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Layer_1" x="0px" y="0px" viewBox="0 0 15 15" enable-background="new 0 0 15 15" xml:space="preserve">
      <switch>
        <foreignObject requiredExtensions="http://ns.adobe.com/AdobeIllustrator/10.0/" x="0" y="0" width="1" height="1">
          <i:pgfRef xlink:href="#adobe_illustrator_pgf">
          </i:pgfRef>
        </foreignObject>
        <g i:extraneous="self">
          <line fill="none" stroke="#919395" stroke-width="3" stroke-miterlimit="10" x1="1.5" y1="13.5" x2="13.5" y2="1.5"/>
          <line fill="none" stroke="#919395" stroke-width="3" stroke-miterlimit="10" x1="1.5" y1="1.5" x2="13.5" y2="13.5"/>
        </g>
      </switch>
    </svg>
  {{/if}}
</div>